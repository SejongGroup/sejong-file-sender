    <bean id="syncSqlSession_CBIZ" class="org.mybatis.spring.SqlSessionTemplate">
      <constructor-arg index="0" ref="syncSqlSessionFactory2" />
    </bean>
	 
     <bean id="syncTransactionManager2" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="syncDataSource2" />
    </bean>
