     <!-- CBIZ -->
    <bean id="dataSource2" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="jdbc/CBIZ_DB"/>
        <property name="resourceRef" value="true"/>
    </bean>
   
    <bean id="sqlSessionFactory2" class="org.mybatis.spring.SqlSessionFactoryBean">
      <property name="dataSource" ref="dataSource2" />
      <property name="mapperLocations" value="classpath:query/*.xml" />
    </bean>
    
    <bean id="sqlSession_CBIZ" class="org.mybatis.spring.SqlSessionTemplate">
      <constructor-arg index="0" ref="sqlSessionFactory2" />
    </bean>  

     <bean id="transactionManager2" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource2" />
    </bean>

    <bean id="syncDataSource2" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="jdbc/CBIZ_SYNC_DB"/>
        <property name="resourceRef" value="true"/>
    </bean>  
    
    <bean id="syncSqlSessionFactory2" class="org.mybatis.spring.SqlSessionFactoryBean">
      <property name="dataSource" ref="syncDataSource2" />
      <property name="mapperLocations" value="classpath:query/*.xml" />
